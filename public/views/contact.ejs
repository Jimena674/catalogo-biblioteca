        <div class="contact_form">
            <% if (message) { %>
                <script>
                    document.addEventListener('DOMContentLoaded', function() {
                        Swal.fire({
                            title: 'Mensaje recibido con éxito!',
                            text: '<%= message %>',
                            icon: '<%= message.includes("Error") ? "error" : "success"%>',
                            confirmButtonText: 'Cerrar'
                        }).then((result) => {
                            if(result.isConfirmed) {
                                window.location.href = '/contact';
                            }
                        });
                    });
                </script>
                <!--<div class="alert">
                    <%= message %>
                    <button onclick="this.parentElement.style.display='none'">&times;</button>
                </div>-->
            <% } %>
            <h2>Contáctanos</h2>
            <form action="/SubmitContact" method="post">

                <div class="contact_group">
                    <div>
                        <label for="">Nombre</label>
                        <input type="text" name="nombre_contacto" id="nombre_contacto" placeholder="Nombre" required>
                    </div>
                    <div>
                        <label for="">Apellido</label>
                        <input type="text" name="apellido_contacto" id="apellido_contacto" placeholder="Apellido" required>
                    </div>
                </div>

                <div class="contact_group">
                    <div>
                        <label for="">Correo</label>
                        <input type="email" name="correo_contacto" id="correo_contacto" placeholder="Correo" required>
                    </div>
                    <div>
                        <label for="">Teléfono</label>
                        <input type="text" name="telefono_contacto" id="telefono_contacto" placeholder="Teléfono" required>
                    </div>
                </div>

                <label for="">Mensaje</label>
                <textarea name="mensaje" id="mensaje" placeholder="Mensaje" required></textarea>

                <button type="submit"> Enviar</button>
                
            </form>
        </div>

    </div>

