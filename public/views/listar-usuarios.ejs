<%- include('includes/adminlte') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Listar Usuarios</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/admin">Inicio</a></li>
              <li class="breadcrumb-item active">Usuarios totales</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Listado total de Usuarios</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example2" class="table table-bordered table-hover">
                  <thead>
                  <tr>
                    <th>id</th>
                    <th>Nombre usuario</th>
                    <th>Apellido usuario</th>
                    <th>Identificación usuario</th>
                    <th>Correo usuario</th>
                    <th>Telefono usuario</th>
                    <th>Dirección usuario</th>
                    <th>Contraseña usuario</th>
                    <th>Acciones</th>
                  </tr>
                  </thead>
                  <tbody>
                  <% usuarios.forEach(usuarios => { %>
                  <tr>
                    <td><%= usuarios.id %></td>
                    <td><%= usuarios.nombre_usuario %></td>
                    <td><%= usuarios.apellido_usuario %></td>
                    <td><%= usuarios.identificacion_usuario %></td>
                    <td><%= usuarios.correo_usuario %></td>
                    <td><%= usuarios.telefono_usuario %></td>
                    <td><%= usuarios.direccion_usuario %></td>
                    <td><%= usuarios.contraseña %></td>
                    <td>X</td>
                  </tr>
                  <% }); %>
                  </tbody>
                  <tfoot>
                  <tr>
                    <th>id</th>
                    <th>Nombre usuario</th>
                    <th>Apellido usuario</th>
                    <th>Identificación usuario</th>
                    <th>Correo usuario</th>
                    <th>Telefono usuario</th>
                    <th>Dirección usuario</th>
                    <th>Contraseña usuario</th>
                    <th>Acciones</th>
                  </tr>
                  </tfoot>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->

          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

<%- include('includes/adminfooter') %>